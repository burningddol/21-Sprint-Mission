{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],

    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    "jsx": "react-jsx",

    "module": "ESNext",
    "moduleResolution": "Bundler",

    "allowJs": true,
    "strict": false,

    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true,

    "resolveJsonModule": true
  },
  "include": ["src"]
}
